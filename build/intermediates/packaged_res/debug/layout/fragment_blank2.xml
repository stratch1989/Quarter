<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/clickable_background"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#E1494949"
android:clickable="true"
tools:context=".BlankFragment2">

<!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameForMetrics"
        android:background="@drawable/rounded_corners3"
        android:layout_width="350dp"
        android:layout_height="510dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/frame_money"
                android:background="@drawable/rounded_corners2"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:gravity="center|left"
                        android:src="@drawable/ruble" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">
                    <TextView
                        android:id="@+id/how_many"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:gravity="center|bottom"
                        android:text="30000" />
                    <TextView
                        android:id="@+id/day_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#646464"
                        android:textSize="12sp"
                        android:gravity="center|top"
                        android:text="1000 в день" />
                </LinearLayout>
            </FrameLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp">
            </Space>
            <FrameLayout
                android:id="@+id/frameCalendar"
                android:background="@drawable/rounded_corners2"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:gravity="center|left"
                        android:src="@drawable/calendar" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">
                    <TextView
                        android:id="@+id/days_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Выберите дату" />

                </LinearLayout>
            </FrameLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp">
            </Space>
            <FrameLayout
                android:id="@+id/frameAbout"
                android:background="@drawable/rounded_corners2"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:gravity="center">
            </FrameLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp">
            </Space>
            <FrameLayout
                android:id="@+id/frameXZ"
                android:background="@drawable/rounded_corners2"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:gravity="center">
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>




</LinearLayout>



</FrameLayout>