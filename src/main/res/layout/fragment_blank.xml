<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clickable_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1494949"
    android:clickable="true"
    tools:context=".BlankFragment">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameForMetrics"
            android:background="@drawable/rounded_corners"
            android:layout_width="350dp"
            android:layout_height="510dp"
            android:clickable="true"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="bottom|center_horizontal"
                    android:background="@drawable/button_border4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/how_many"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="30000"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout

                            android:layout_weight="10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right">
                            <Button
                                android:id="@+id/buttondel"
                                android:layout_height="match_parent"
                                android:layout_width="50dp"
                                android:background="@drawable/button_border5"
                                android:text="&lt;"
                                android:textSize="30sp" />
                        </LinearLayout>

                    </LinearLayout>


                </FrameLayout>



                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="288dp"
                    android:layout_height="384dp"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/button7"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="7"
                                android:textSize="35sp" />

                            <Button
                                android:id="@+id/button8"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="8"
                                android:textSize="35sp" />

                            <Button
                                android:id="@+id/button9"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="9"
                                android:textSize="35sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button4"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="4"
                                android:textSize="35sp" />

                            <Button
                                android:id="@+id/button5"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="5"
                                android:textSize="35sp" />

                            <Button
                                android:id="@+id/button6"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="6"
                                android:textSize="35sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button1"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="1"
                                android:textSize="35sp" />

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="2"
                                android:textSize="35sp" />

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="3"
                                android:textSize="35sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button0"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="2"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="0"
                                android:textSize="35sp" />

                            <Button
                                android:id="@+id/buttonPoint"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0"
                                android:background="@drawable/button_border6"
                                android:textColor="#C3000000"
                                android:padding="0dp"
                                android:text="."
                                android:textSize="35sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal">

        <ImageView
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/save_button" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Сохранить"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>


</FrameLayout>